<% provide(:title, "New Task") %>
<h1>タスク新規作成</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: [current_user, @task], local: true) do |f| %>
      <%= render 'shared/error_messages', object: @task %>
      
      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :detail, class: "label-form" %>
      <%= f.text_area :detail, rows: "5", class: "form-control" %>
      
      <%= f.submit "新規登録", class: "btn btn-lg btn-primary btn-form" %>
    <% end %>
  </div>
</div>